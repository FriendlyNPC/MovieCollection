<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.school.comp3717.moviecollection.search.CollectionResultsList"
        android:background="@color/grey_300"
        android:id="@+id/collectionItems">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_results"
            android:id="@+id/collectionResultsStatus"
            android:textColor="@color/grey_800"
            android:textStyle="italic"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collectionProgressBar"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collectionItemList" />
    </RelativeLayout>