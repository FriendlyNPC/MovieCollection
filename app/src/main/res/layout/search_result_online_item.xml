<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_300">



    <com.school.comp3717.moviecollection.tools.AutoFitTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test Movie"
        android:id="@+id/resultOnlineItemTitle"
        android:layout_alignParentStart="true"
        android:textColor="@color/grey_800"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/quickAddButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultOnlineItemTitle"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(1972)"
        android:id="@+id/resultOnlineItemYear"
        android:layout_alignParentStart="true"
        android:textColor="@color/grey_500"
        android:textStyle="italic"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"/>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/quickAddButton"
        android:clickable="false"
        android:layout_alignTop="@+id/resultOnlineItemTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/resultOnlineItemYear"
        android:longClickable="false"
        android:src="@mipmap/ic_quick_add"
        android:scaleType="fitCenter"
        android:background="@color/grey_300"
        android:contentDescription="@string/quick_add_descriptor" />

</RelativeLayout>