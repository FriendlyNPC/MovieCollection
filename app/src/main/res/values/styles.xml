<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryDark">@color/green_800</item>
        <item name="colorAccent">@color/green_300</item>
    </style>

    <style name="ToolbarCustomIconColor" parent="AppTheme">
        <!-- android:textColorSecondary is used for coloring the navigation drawer icon and up arrow. -->
        <item name="android:textColorSecondary">@color/amber_800</item>
    </style>

    <!-- Creating a custom green star rating bar -->
    <style name="movieRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/movie_rating_bar</item>
    </style>

</resources>
